# Django Velocity - Environment Variables
# Copy this file to .env and fill in your values

# Django Settings
# ================
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-with-just-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# ========
DATABASE_URL=postgres://postgres:postgres@db:5432/velocity

# For local development without Docker:
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/velocity

# Security (Production)
# =====================
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourdomain.com

# JWT Settings
# ============
# ACCESS_TOKEN_LIFETIME_MINUTES=60
# REFRESH_TOKEN_LIFETIME_DAYS=7

# Email (Optional)
# ================
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@example.com
